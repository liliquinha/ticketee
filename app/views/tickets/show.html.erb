<div id='ticket'>
	<h2><%= @ticket.title %></h2>
			<%= authorized?("edit tickets", @project)  do %>
				<%= link_to "Editar", [:edit, @project, @ticket] %>
			<% end %>
			<%= authorized?("delete tickets", @project)  do %>
				<%= link_to "Delete", [@project, @ticket], method: :delete %>
			<% end %>
	<small>Criado por <%= @ticket.user.email %></small>
	<%= simple_format(@ticket.description) %><br/>
	<% if @ticket.asset.exists? #exists? defined on paperclip %>
		<h3>Attached File</h3>
		<div class="asset">
			<p>
				<%= link_to File.basename(@ticket.asset.path), @ticket.asset.url %>
			</p>
			<p><small><%= number_to_human_size(@ticket.asset.size) %>
			(<%= @ticket.asset.content_type %>)</small></p>
		</div>
	<% end %>
</div>